<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical"
    tools:context="com.oneproject.www.smartoday.IotActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layout_margin="10dp"
        android:background="@drawable/shape_list"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/home" />
        <ListView
            android:id="@+id/lvHome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="25dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_gravity="center"
            app:srcCompat="@drawable/plus" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/iot"
                android:layout_marginLeft="53dp"
                android:layout_marginStart="53dp"
                android:layout_toEndOf="@+id/iot"
                android:layout_toRightOf="@+id/iot"
                app:srcCompat="@drawable/settingoff" />

            <ImageView
                android:id="@+id/check"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/iot"
                android:layout_alignRight="@+id/iot"
                android:layout_centerVertical="true"
                android:layout_marginEnd="81dp"
                android:layout_marginRight="81dp"
                app:srcCompat="@drawable/check" />

            <ImageView
                android:id="@+id/iot"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/check"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/wifion" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout><!-- 리스트에 스위치 어댑트해서 구현해야하는거는 아직 놔둠-->
